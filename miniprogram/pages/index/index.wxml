<!--index.wxml-->
<view class="swiper">
  <swiper 
    indicator-dots
    autoplay
  >
      <block wx:for="{{swiper}}"  wx:key="index">
        <swiper-item>
          <!-- <image class="swiper-img" src="{{item}}" ></image> -->
          <view class="swiper-view" style="background-image: url({{item}})"></view>
        </swiper-item>
      </block>
  </swiper>
</view> 

