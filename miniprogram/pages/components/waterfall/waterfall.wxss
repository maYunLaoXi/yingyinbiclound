.img-wrap{
  padding: 0 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #f6f6f6;
}
.left, .right{
  width: 363rpx;
}
.cu-card{
  background-color: var(--white);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.cu-card>.cu-item{
  margin: 0;
}
.image image{
  border-radius: 10rpx;
}
.cu-avatar.lg {
	width: 33rpx;
	height: 33rpx;
	font-size: 1em;
}
.cu-list.menu-avatar>.cu-item{
  height: auto;
  justify-content: space-between;
  padding: 15rpx 10rpx;
}
.title{
  font-size: 26rpx;
  padding: 0 10rpx;
  max-height:78rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.user-name{
  font-size: 25rpx;
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  color: var(--gray);
  margin-left: 4rpx;
}
.margin-lr-xs{
  margin: 0;
}
.cu-card.case .image .cu-tag{
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;  
  top: 10rpx;
  right: 10rpx;
}
.bg-black-5{
  background-color: rgba(0,0,0,.7);
  color: var(--white);
}
.start-icon{
  font-size: 26rpx;
}