<!--miniprogram/pages/components/add-picture-article/add-picture-article.wxml-->
<!-- 图文新建页 -->
<view>
  <view class="cu-bar bg-white margin-top img">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<15}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <view class="cu-form-group">
    <input placeholder="标题写在这～"></input>
  </view>
  	<view class="cu-form-group">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="articleInput" placeholder="添加正文..."></textarea>
	</view>
	<view class="cu-form-group margin-top">
		<view class="title">分类</view>
		<picker bindchange="classPicker" range-key="nameCh" range="{{PhotographyClass}}">
			<view class="picker">
				{{class?class.nameCh:'选择分类'}}
			</view>
		</picker>
	</view>
</view>
