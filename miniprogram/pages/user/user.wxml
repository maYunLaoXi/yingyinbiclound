<!--miniprogram/pages/user/user.wxml-->
<view class="wrap">
  <view class="user-bg">
    <image src="../../images/114716533.jpg"></image>
  </view>
  <movable-area class="user-box">
    <movable-view
    direction="vertical" 
    out-of-bounds 
    inertia 
    function="10"
    class="user-info"
    >
      <view class="profile">
        <button
          class="userinfo-avatar"
          style="background-image: url({{userInfo.avatarUrl}})"
        ></button>
      </view>
      <view class="main">
        <view class="user-detail">
          <text class="nick-name">{{userInfo.nickName}}</text>
          <text class="discript"></text>
        </view>
      </view>

    </movable-view>
  </movable-area>
</view>
