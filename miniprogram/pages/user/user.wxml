<!--miniprogram/pages/user/user.wxml-->
<view class="wrap">
  <view class="user-bg">
    <image src="../../images/114716533.jpg"></image>
  </view>
  <movable-area class="user-box">
    <movable-view
    direction="vertical" 
    out-of-bounds 
    inertia 
    function="10"
    class="user-info"
    >
      <button 
        open-type="getUserInfo" 
        bindgetuserinfo="onGetUserInfo"
        class="userinfo-avatar"
        style="background-image: url({{avatarUrl}})"
      ></button>
    </movable-view>
  </movable-area>
</view>
